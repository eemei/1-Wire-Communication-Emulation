#include <stdlib.h>
#include "stm32f1xx_hal.h"
#include "state_machine.h"
#include "function.h"

UART_HandleTypeDef huart1;

int fsm(State state){
	uint8_t presensePulse;
	switch(state){
	case INIT_STATE:
		oneWireReset();
		state = RESPONSE_STATE;
		break;
	case RESPONSE_STATE:
		HAL_UART_Receive_IT(&huart1, &presensePulse, sizeof(presensePulse));
		if(presensePulse == 0xFF){
			presensePulse = 0x11;
		}
		break;
	default:
		state = INIT_STATE;
	}
	return state;
}

