#ifndef STATE_MACHINE_H
#define STATE_MACHINE_H

typedef

typedef enum{
	UART_RX_CPL_EVT,
	UART_TX_CPL_EVT,
	TIMEOUT_EVT
}EventType;

typedef enum{
	INIT,
	INIT_COMPLETE,
	READ,
	BIT_SEARCH
}State;

typedef struct Event Event;
struct Event{
	EventType type;
	void *data;
};

int initSM(State state);

#endif /* STATE_MACHINE_H */
