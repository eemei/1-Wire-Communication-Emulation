#include <stdlib.h>
#include "stm32f1xx_hal.h"
#include "function.h"

UART_HandleTypeDef huart1;

void masterWriteByte(uint8_t byte){
	if(byte == 0x0){
		huart1.Instance->BRR = 480;
	}
	else{
		huart1.Instance->BRR = 80;
	}

	HAL_UART_Transmit(&huart1, &byte, sizeof(byte), 0);
}

void oneWireReset(){
	uint8_t reset = 0x00;

	huart1.Instance->BRR = 4000;

	HAL_UART_Transmit(&huart1, &reset, sizeof(reset), 0);
}

void searchCommand(){
	int i;

	for(i=0; i<9; i++){
		if(i<5){
			masterWriteByte(BYTE0);
		}
		else{
			masterWriteByte(BYTE1);
		}
	}
}

void readCommand(){
	masterWriteByte(BYTE1);
	masterWriteByte(BYTE1);
	masterWriteByte(BYTE0);
	masterWriteByte(BYTE0);
	masterWriteByte(BYTE1);
	masterWriteByte(BYTE1);
	masterWriteByte(BYTE0);
	masterWriteByte(BYTE0);
}
