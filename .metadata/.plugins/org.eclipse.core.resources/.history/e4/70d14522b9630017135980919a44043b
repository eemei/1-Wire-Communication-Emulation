#include <stdlib.h>
#include "stm32f1xx_hal.h"
#include "state_machine.h"
#include "function.h"

UART_HandleTypeDef huart1;

int fsm(State state){
	static uint8_t familyCode;
	switch(state){
	case INIT:
		oneWireReset();
		state = SEARCH;
		break;
	case SEARCH:
		readCommand();
		state = RECEIVE;
		break;
	case RECEIVE:
		HAL_UART_Receive_IT(&huart1, &familyCode, 1);
		break;
	default:
		state = INIT;
	}
	return state;
}

